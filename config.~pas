unit config;

interface
uses basa_dan, Control_CRUD, Control,defoltTest, DocumentForm, Lecture_CRUD, Menu_CRUD,
Menu_Lectures, Menu_Practic, Menu_Teacher, PassingKnowledgeControl, Practic_CRUD, Result,
Stydent_CRUD,  Tema_CRUD, Title_Form, Unit2, UpdateLecture, UpdateTema, UpdateUnit, Ycheniki_CRUD, AddTema, DateUtils;

var  x:integer;

procedure selectRequestSQL(str:string);
procedure execRequestSQL(str:string);
procedure rebootRequestsCRUD;

implementation

uses Add_Question;

procedure selectRequestSQL(str:string);
begin
    DataModule1.RequestSQL.SQL.Clear;
    DataModule1.RequestSQL.SQL.Add(str);
    DataModule1.RequestSQL.Open;
end;

procedure execRequestSQL(str:string);
begin
    DataModule1.RequestSQL.SQL.Clear;
    DataModule1.RequestSQL.SQL.Add(str);
    DataModule1.RequestSQL.ExecSQL;
end;

procedure rebootRequestsCRUD;
    begin
      DataModule1.RazdelADO.Active:=False;
      DataModule1.RazdelADO.Active:=True;

      DataModule1.TemaADO.Active:=False;
      DataModule1.TemaADO.Active:=True;

      DataModule1.LectureADO.Active:=False;
      DataModule1.LectureADO.Active:=True;

      DataModule1.PracticADO.Active:=False;
      DataModule1.PracticADO.Active:=True;

      DataModule1.ControlADO.Active:=False;
      DataModule1.ControlADO.Active:=True;

      DataModule1.YchenikADO.Active:=false;
      DataModule1.YchenikADO.Active:=true;
  end;

end.

